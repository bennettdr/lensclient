<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogcharacter"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
 	<LinearLayout
	    android:id="@+id/charactername"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <TextView android:id="@+id/characternamelable"
		    android:text="@string/charactername"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" />		    
		<EditText android:id="@+id/characternametext"
		    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" />	    
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/characterurl"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <TextView android:id="@+id/characterworldlable"
		    android:text="@string/characterworld"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" />		    
	    <TextView android:id="@+id/characterworldtext"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" />		    
	    <Button android:id="@+id/character_worldbutton"
		    android:layout_height="wrap_content"
	    	android:layout_width="wrap_content"
	    	android:text="@string/characterchooseworld"/>	 
	</LinearLayout>

	<LinearLayout
	    android:id="@+id/characterip"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <TextView android:id="@+id/characterpasswordlable"
		    android:text="@string/characterpassword"
		    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" />		    
		<EditText android:id="@+id/characterpasswordtext"
		    android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" />	    
	</LinearLayout>
			
	<Button android:id="@+id/character_savebutton"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/button_save"/>
	    
	<Button android:id="@+id/character_cancelbutton"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/button_cancel"/>

		<Button android:id="@+id/character_deletebutton"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:text="@string/button_delete"/>	
</LinearLayout>